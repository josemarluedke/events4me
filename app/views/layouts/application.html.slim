doctype html
html
  head
    title = "#{@title}#{' Â· ' if @title}Events4me"
    = stylesheet_link_tag "application"
    meta[charset="utf-8"]
    meta[name="description" content=""]
    meta[name="keywords" content=""]
    meta[name="author" content=""]
    meta[name="viewport" content="width=device-width, initial-scale=1.0"]
    = yield(:meta_tags)
    = csrf_meta_tag
    = javascript_include_tag "application"
  body data-controller-class=controller.class.name data-controller-name=controller.controller_name.camelize data-action=controller.action_name.camelize
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          a.btn.btn-navbar data-target=".nav-collapse" data-toggle="collapse"
            span.icon-bar
            span.icon-bar
            span.icon-bar
          = link_to "Events4me", root_path, class: "brand"
          .nav-collapse.collapse
            = render_navigation
            ul.nav.secondary-nav
              li= link_to t('.links.sign_in'), new_user_session_path unless user_signed_in?
              li= link_to t('.links.sign_up'), new_user_registration_path unless user_signed_in?
            - if user_signed_in?
              ul.nav.pull-right
                li.dropdown
                  a.dropdown-toggle href="#" data-toggle="dropdown"
                    img src="#{current_user.avatar_url}" height="22" width="22"
                    = current_user.name
                    b.caret
                  ul.dropdown-menu
                    li= link_to t('.links.profile_settings'), edit_user_registration_path(current_user)
                    li= link_to t('.links.logout'), destroy_user_session_path, :method => :delete if user_signed_in?

    header
    .container
      = yield
    footer
